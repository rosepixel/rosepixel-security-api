{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@app/*": ["src/*"],
			"@model/*": ["src/model/*"],
			"@common/*": ["src/common/*"],
			"@database/*": ["src/database/*"],
			"@configuration/*": ["src/configuration/*"],
			"@provider/*": ["src/provider/*"]
		}
	}
}
