{
    "compilerOptions": {
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "@environments/*": [
                "./environments/*"
            ],
            "@utilities/*": [
                "./utilities/*"
            ],
            "@injections/*": [
                "./injections/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@application/*": [
                "./application/*"
            ],
            "@domain/*": [
                "./domain/*"
            ],
            "@infrastructure/*": [
                "./infrastructure/*"
            ],
            "@tests/*": [
                "../tests/*"
            ],
        },
        "pretty": true,
        "rootDirs": [
            "src",
            "tests"
        ],
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2019"
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules"
    ]
}