{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@models/*": [ "src/models/*" ],
            "@common/*": [ "src/common/*" ],
            "@database/*": [ "src/database/*" ],
            "@config/*": [ "src/config/*" ],
            "@providers/*": [ "src/providers/*" ]
        }
    }
}